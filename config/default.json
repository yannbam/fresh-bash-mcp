{
  "allowedCommands": [
    "ls",
    "cat",
    "echo",
    "pwd",
    "grep",
    "find",
    "head",
    "tail",
    "wc",
    "mkdir",
    "touch",
    "rm",
    "cp",
    "mv",
    "git"
  ],
  "allowedDirectories": [
    "/tmp",
    "/home/jan/ai/claude/claude_fs"
  ],
  "session": {
    "timeout": 300,
    "maxActiveSessions": 5,
    "defaultMode": "stateless"
  },
  "security": {
    "validateCommandsStrictly": true,
    "sanitizeOutput": true,
    "maxOutputSize": 1048576,
    "commandTimeout": 30
  },
  "logging": {
    "level": "info",
    "file": "logs/bash-mcp.log",
    "maxSize": 10485760,
    "maxFiles": 5
  }
}
