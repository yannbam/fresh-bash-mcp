{
  "name": "bash-mcp",
  "version": "0.1.0",
  "description": "A TypeScript Bash Master Control Program for secure command execution",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "mcp": "node dist/index.js --mcp-server",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js --mcp-server",
    "mcp-js": "node src/mcp-server.js",
    "inspector-js": "npx @modelcontextprotocol/inspector node src/mcp-server.js",
    "working-example": "node src/working-example.js",
    "inspector-working": "npx @modelcontextprotocol/inspector node src/working-example.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "bash",
    "command",
    "execution",
    "security",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "18.16.0"
  },
  "dependencies": {
    "node-pty": "^0.10.1",
    "fs-extra": "^11.1.1",
    "winston": "^3.10.0",
    "uuid": "^9.0.0",
    "@modelcontextprotocol/sdk": "1.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
